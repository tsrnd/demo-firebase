{
  "name": "functions",
  "engines": {
    "node": "8"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build:fe:admin": "cd src-fe/admin && npm run build",
    "build:fe:admin:prod": "cd src-fe/admin && npm run build:prod",
    "build:fe": "npm run build:fe:admin",
    "build:fe:prod": "npm run build:fe:admin:prod",
    "build:be": "rm -rf ./dist && tsc && npm run copy",
    "build": "npm run build:fe && npm run build:be",
    "build:prod": "npm run build:fe:prod && npm run build:be",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "copy:admin:html": "rm -rf ./dist/admin/html && cp -r ./src/admin/html ./dist/admin/html",
    "copy": "npm run copy:admin:html"
  },
  "main": "dist/index.js",
  "dependencies": {
    "@types/pug": "^2.0.4",
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "firebase-admin": "^7.0.0",
    "firebase-functions": "^2.2.0",
    "lodash": "^4.17.11",
    "path": "^0.12.7",
    "request-promise": "^4.2.4"
  },
  "devDependencies": {
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  },
  "private": true
}
